<%= page_title [
	link_to("#{t 'comment.comments'}: (#{@comment.commentable.title})", :controller => 'comment_admin', :id => @comment.commentable_id, :type => @comment.commentable_type), 
		t('edit').titleize] %>

<%= simple_form_for @comment, url: { controller: 'comment_admin', action: 'edit', id: @comment.id } do |f| %>
	<%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :website, required: false %>
	<%= f.input :comment %>
	<%= f.submit t('save') %>
<% end %>
