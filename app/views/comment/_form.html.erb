<div class="parent_comment" style="margin:0;padding:0;display: inline;">
  <input type="hidden" name="parent_id" value="<%= parent_id %>">
</div>
<div>
  <%= form.label :name, "#{t 'name'} <span class=\"asterix\">*</span>" %>
  <%= form.text_field :name %>
  <%= form.error_message_on :name %>
</div>
<div>
  <%= form.label :email, "#{t 'email.email'} <span class=\"asterix\">*</span>" %>
  <%= form.text_field :email %>
  <%= form.error_message_on :email %>
</div>
<div>
  <%= form.label :website, t('site.site') %>
  <%= form.text_field :website %>
  <%= form.error_message_on :website %>
</div>
<div>
  <%= form.label :comment, "#{t 'comment.comment'} <span class=\"asterix\">*</span>" %>
  <%= form.text_area :comment %>
  <%= form.error_message_on :comment %>
</div>
<div>
  <%= show_simple_captcha :label => t('captcha.info') %>
</div>
